<form string="Sale Line" cursor="product">
    <label name="sale"/>
    <field name="sale" colspan="3"/>
    <notebook colspan="4">
        <page string="General" id="general">
            <label name="type"/>
            <field name="type"/>
            <label name="sequence"/>
            <field name="sequence"/>
            <label name="product"/>
            <field name="product"
                view_ids="nodux_product_one.product_view_list_sale_line"/>
            <newline/>
            <label name="description"/>
            <field name="description" colspan="3"/>
            <label name="quantity"/>
            <field name="quantity"/>
            <label name="unit"/>
            <field name="unit"/>
            <label name="unit_price"/>
            <field name="unit_price"/>
            <label name="amount"/>
            <field name="amount"/>
            <newline/>
            <label name="desglose"/>
            <field name="desglose"/>
            <newline/>
            <group id="discount" colspan="2" col="2" xexpand="0">
                <label name="discount" xalign="0" xexpand="0"/>
                <group id="discount_percent" colspan="1" col="2" xexpand="0">
                    <field name="discount" factor="100" xalign="0.0" xexpand="0"/>
                    <label name="discount" string="%" xalign="0.0" xexpand="1" xfill="1"/>
                </group>
            </group>
            <newline/>
            <label name="discount_desglose"/>
            <field name="discount_desglose"/>
        </page>
    </notebook>
    <field name="unit_digits" invisible="1" colspan="4"/>
</form>
