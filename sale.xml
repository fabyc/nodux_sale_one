<?xml version="1.0"?>
<!-- This file is part sale_pos module for Tryton.
The COPYRIGHT file at the top level of this repository contains the full copyright notices and license terms. -->
<tryton>
    <data>
      <record model="ir.action.wizard" id="wizard_sale_payment">
          <field name="name">Pay</field>
          <field name="wiz_name">sale.payment</field>
      </record>
      <record model="ir.ui.view" id="sale_payment_view_form">
          <field name="model">sale.payment.form</field>
          <field name="type">form</field>
          <field name="name">sale_payment_form</field>
      </record>

        <!-- Views -->
        <record model="ir.ui.view" id="sale_line_view_tree">
            <field name="model">sale.line</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">sale_line_tree</field>
        </record>
        <record model="ir.ui.view" id="sale_line_view_form">
            <field name="model">sale.line</field>
            <field name="type">form</field>
            <field name="name">sale_line_form</field>
        </record>

        <record model="ir.ui.view" id="sale_pos_view_tree">
            <field name="model">sale.sale</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">sale_pos_tree</field>
        </record>
        <record model="ir.ui.view" id="sale_pos_view_form">
            <field name="model">sale.sale</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="name">sale_pos_form</field>
        </record>

        <record model="ir.ui.view" id="sale_payment_line_view_tree">
            <field name="model">sale.payments</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">sale_payment_line_tree</field>
        </record>
        <record model="ir.ui.view" id="sale_payment_line_view_form">
            <field name="model">sale.payments</field>
            <field name="type">form</field>
            <field name="name">sale_payment_line_form</field>
        </record>

        <record model="ir.ui.view" id="sale_sequence_view_tree">
            <field name="model">sale.sequence</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">sale_sequence_tree</field>
        </record>
        <record model="ir.ui.view" id="sale_sequence_view_form">
            <field name="model">sale.sequence</field>
            <field name="type">form</field>
            <field name="name">sale_sequence_form</field>
        </record>

        <!-- Actions -->
        <record model="ir.action.act_window" id="act_sale_form">
            <field name="name">POS Sales</field>
            <field name="res_model">sale.sale</field>
        </record>

        <record model="ir.action.act_window.view" id="act_sale_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="sale_pos_view_form"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>

        <record model="ir.action.act_window.view" id="act_sale_view_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="sale_pos_view_tree"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>

        <record model="ir.action.act_window.domain" id="act_sale_form_domain_draft">
            <field name="name">Draft</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state', '=', 'draft')]" pyson="1"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_sale_form_domain_quotation">
            <field name="name">Quotation</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state', '=', 'quotation')]" pyson="1"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_sale_form_domain_confirmed">
            <field name="name">Confirmed</field>
            <field name="sequence" eval="30"/>
            <field name="domain" eval="[('state', '=', 'confirmed')]" pyson="1"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_sale_form_domain_processing">
            <field name="name">Done</field>
            <field name="sequence" eval="40"/>
            <field name="domain" eval="[('state', '=', 'done')]" pyson="1"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_sale_form_domain_anulled">
            <field name="name">Anulled</field>
            <field name="sequence" eval="50"/>
            <field name="domain" eval="[('state', '=', 'anulled')]" pyson="1"/>
            <field name="act_window" ref="act_sale_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_sale_form_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="9999"/>
            <field name="domain"></field>
            <field name="act_window" ref="act_sale_form"/>
        </record>

        <menuitem name="Sales" id="menu_sale" sequence="5"/>
        <menuitem name="POS Sales" parent="menu_sale" id="menu_sale_pos"
            sequence="2" icon="tryton-list" action="act_sale_form"/>

        <!--Action Sale Sequence -->
        <record model="ir.action.act_window" id="act_sequence_form">
            <field name="name">Point of Sale</field>
            <field name="res_model">sale.sequence</field>
        </record>

        <record model="ir.action.act_window.view" id="act_sale_sequence_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="sale_sequence_view_form"/>
            <field name="act_window" ref="act_sequence_form"/>
        </record>

        <record model="ir.action.act_window.view" id="act_sale_sequence_view_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="sale_sequence_view_tree"/>
            <field name="act_window" ref="act_sequence_form"/>
        </record>

        <menuitem name="Configuration Sale" id="menu_sale_configuration"
          sequence="1" parent="menu_sale"/>

        <menuitem name="Point of Sale" parent="menu_sale_configuration"
          id="menu_sale_sequence" sequence="2" icon="tryton-list"
          action="act_sequence_form"/>

        <!-- Reports -->
        <record model="ir.action.report" id="report_sale_pos">
            <field name="name">Sale</field>
            <field name="model">sale.sale</field>
            <field name="report_name">sale.sale_pos</field>
            <field name="report">nodux_sale_one/sale.odt</field>
        </record>

        <record model="ir.action.keyword" id="report_sale_pos_keyword">
            <field name="keyword">form_print</field>
            <field name="model">sale.sale,-1</field>
            <field name="action" ref="report_sale_pos"/>
        </record>

        <record model="ir.action.report" id="report_sale_payment">
            <field name="name">Report Payments</field>
            <field name="model">sale.sale</field>
            <field name="report_name">sale.sale_payment_report</field>
            <field name="report">nodux_sale_one/payments.odt</field>
        </record>

        <record model="ir.action.keyword" id="report_sale_payment_keyword">
            <field name="keyword">form_print</field>
            <field name="model">sale.sale,-1</field>
            <field name="action" ref="report_sale_payment"/>
        </record>

        <!--REPORTE TOTAL DE VENTAS-->
        <record model="ir.ui.view" id="print_sale_report_start_view_form">
            <field name="model">nodux_sale_one.print_report_sale.start</field>
            <field name="type">form</field>
            <field name="name">sale_report_start_form</field>
        </record>
        <record model="ir.action.wizard" id="wizard_sales_report">
            <field name="name">Reporte de Ventas por fecha</field>
            <field name="wiz_name">nodux_sale_one.print_report_sale</field>
        </record>
        <record model="ir.action.report" id="report_sales">
            <field name="name">Reporte de Ventas</field>
            <field name="model"></field>
            <field name="report_name">nodux_sale_one.report_sales</field>
            <field name="report">nodux_sale_one/report_sales.odt</field>
        </record>
        <menuitem parent="menu_sale" action="wizard_sales_report"
            id="menu_sale_report" icon="tryton-print"/>

        <!--REPORTE DE PAGOS-->
        <record model="ir.ui.view" id="print_payment_report_start_view_form">
            <field name="model">nodux_sale_one.print_report_payment.start</field>
            <field name="type">form</field>
            <field name="name">payment_report_start_form</field>
        </record>
        <record model="ir.action.wizard" id="wizard_payment_report">
            <field name="name">Reporte de Pagos por Fecha</field>
            <field name="wiz_name">nodux_sale_one.print_report_payment</field>
        </record>
        <record model="ir.action.report" id="report_payments">
            <field name="name">Reporte de Pagos</field>
            <field name="model"></field>
            <field name="report_name">nodux_sale_one.report_payments</field>
            <field name="report">nodux_sale_one/report_payments.odt</field>
        </record>
        <menuitem parent="menu_sale" action="wizard_payment_report"
            id="menu_payment_report" icon="tryton-print"/>

        <!--Reporte de cuentas por cobrar -->
        <record model="ir.ui.view" id="sale_view_tree">
            <field name="model">sale.sale</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">sale_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_receivable_form">
          <field name="name">Por cobrar</field>
          <field name="res_model">sale.sale</field>
          <field name="domain" eval="[('party', '!=', None), ('state', '=', 'confirmed'), ('residual_amount', '>=', 0)]" pyson="1"/>
        </record>

        <record model="ir.action.act_window.view" id="act_receivable_form_view1">
          <field name="sequence" eval="10"/>
          <field name="view" ref="sale_view_tree"/>
          <field name="act_window" ref="act_receivable_form"/>
        </record>

        <menuitem parent="menu_sale" action="act_receivable_form"
          sequence="3" id="menu_receivable_form"/>
          
        <!--REPORTE CIERRE DE CAJA-->
        <record model="ir.ui.view" id="print_report_close_cash_start_view_form">
          <field name="model">nodux_sale_one.print_report_close_cash.start</field>
          <field name="type">form</field>
          <field name="name">report_close_cash_start_form</field>
        </record>
        <record model="ir.action.wizard" id="wizard_close_cash">
          <field name="name">Close cash</field>
          <field name="wiz_name">nodux_sale_one.print_report_close_cash</field>
        </record>
        <record model="ir.action.report" id="report_close_cash">
          <field name="name">Close cash</field>
          <field name="model"/>
          <field name="report_name">nodux_sale_one.report_close_cash</field>
          <field name="report">nodux_sale_one/close_cash.odt</field>
        </record>
        <menuitem parent="menu_sale" action="wizard_close_cash"
          id="menu_close_cash" icon="tryton-print"/>

        <!--Group-->
        <record model="res.group" id="group_stock_force">
            <field name="name">Nodux - Stock Force</field>
        </record>

        <record model="res.user-res.group"
            id="user_admin_group_stock_force">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_stock_force"/>
        </record>

        <record model="res.user-res.group"
            id="user_trigger_group_stock_force">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_stock_force"/>
        </record>

        <!--Group Modificar TPV-->
        <record model="res.group" id="group_change_tpv">
            <field name="name">Nodux - Cambiar TPV</field>
        </record>

        <record model="res.user-res.group"
            id="user_admin_group_change_tpv">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_change_tpv"/>
        </record>

        <record model="res.user-res.group"
            id="user_trigger_group_change_tpv">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_change_tpv"/>
        </record>

        <!-- relacionado-->
        <record model="ir.action.act_window" id="act_sale_relate_form">
            <field name="name">Venta</field>
            <field name="res_model">sale.sale</field>
            <field name="domain" eval="[('id', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword"
                id="act_open_sale_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">sale.sale,-1</field>
            <field name="action" ref="act_sale_relate_form"/>
        </record>

        <!--PERMISOS -->
        <record model="res.group" id="group_sale">
              <field name="name">Nodux - Ventas</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_sale">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_sale"/>
        </record>

        <record model="res.user-res.group" id="user_trigger_group_sale">
            <field name="user" ref="res.user_trigger"/>
            <field name="group" ref="group_sale"/>
        </record>

        <record model="ir.ui.menu-res.group" id="menu_sale_group_sale_configuration">
            <field name="menu" ref="menu_sale_configuration"/>
            <field name="group" ref="group_sale"/>
        </record>
        <record model="ir.ui.menu-res.group" id="menu_sale_group_sale_report">
            <field name="menu" ref="menu_sale_report"/>
            <field name="group" ref="group_sale"/>
        </record>
        <record model="ir.ui.menu-res.group" id="menu_sale_group_sale_receivable">
            <field name="menu" ref="menu_receivable_form"/>
            <field name="group" ref="group_sale"/>
        </record>
        <record model="ir.ui.menu-res.group" id="menu_sale_group_sale_payment">
            <field name="menu" ref="menu_payment_report"/>
            <field name="group" ref="group_sale"/>
        </record>

    </data>
</tryton>
